    "eslint-plugin-jest": "^26.8.2",
    "jest": "^28.1.3",
    "prettier": "2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
